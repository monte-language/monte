#!/usr/bin/env python
import sys, os
path = os.path.abspath(sys.argv[0])
while os.path.dirname(path) != path:
    if os.path.exists(os.path.join(path, 'monte', '__init__.py')):
        sys.path.insert(0, path)
        break
    path = os.path.dirname(path)

from monte.runtime.load import eval as monte_eval, monteImport
# from monte.repl import startRepl

# startRepl()
from monte.runtime.scope import safeScope
scope = safeScope.copy()
scope["import"] = monteImport()
if len(sys.argv) > 1:
    monte.runtime.load.eval(open(sys.argv[1]).read(), scope)
